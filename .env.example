# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000

# Development Settings  
VITE_APP_ENV=development

# Sentry Configuration
# Get these values from your Sentry project settings (https://sentry.io)
# DSN: Project Settings > Client Keys (DSN)
VITE_SENTRY_DSN=https://your_public_key@your_sentry_instance.ingest.sentry.io/your_project_id

# Enable Sentry in development (optional, defaults to production only)
# Set to "true" to test Sentry integration in development
VITE_SENTRY_ENABLED=false

# Application version for release tracking (optional)
# Used to track which version of your app generated errors
VITE_APP_VERSION=1.0.0

# Sentry Build Configuration (for source map upload)
# Organization slug: Organization Settings > General
SENTRY_ORG=your-organization-slug

# Project slug: Project Settings > General
SENTRY_PROJECT=your-project-slug

# Auth token: User Settings > Auth Tokens (needs project:write scope)
# Create a token at: https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=your_auth_token_here